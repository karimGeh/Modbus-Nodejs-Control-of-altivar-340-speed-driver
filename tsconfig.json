{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "outDir": "dist",
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,

    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "types.d.ts"]
}
